{
  "name": "@gvempire/shrt",
  "version": "0.0.5",
  "scripts": {
    "start": "next",
    "build": "next build",
    "build:docs": "typedoc --out docs --tsconfig ./typedoc.config.json --categorizeByGroup true --includeDeclarations --excludeExternals --name \"Next-Starter\" --includeVersion --readme ./README.md ",
    "build:docs-json": "typedoc --out docs --exclude \"**/*.test.(ts|tsx)\" --json --name \"Shrt\" --includeVersion --readme ./README.md ",
    "build:functions": "cd functions && yarn build",
    "export": "next export",
    "serve": "next start",
    "serve:docs": "npx serve ./docs",
    "type-check": "tsc",
    "format": "prettier --write ./**/*/*.{jsx,js,ts,tsx}",
    "lint": "echo 'No Linting -->'",
    "test": "jest -c jest.config.js --runInBand --detectOpenHandles --forceExit",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "predeploy": "npm-run-all -l -s format lint type-check test",
    "use:development": "firebase use development",
    "use:staging": "firebase use staging",
    "use:production": "firebase use production",
    "changelog": "git log --all --graph --decorate --oneline > CHANGELOG; git add .; git commit -m \"update changelog\"; yarn version --patch; git push --follow-tags; echo \"Released $npm_package_version\"",
    "deploy": "npm-run-all -l -s deploy:*",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "preview": "vercel",
    "development": "yarn use:development && yarn deploy",
    "staging": "yarn use:staging && yarn deploy",
    "production": "yarn use:production && yarn deploy"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@types/firebase": "^3.2.1",
    "dotenv": "^8.2.0",
    "emotion-reset": "^2.0.7",
    "emotion-theming": "^10.0.27",
    "firebase": "^8.0.0",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0",
    "framer-motion": "^2.9.4",
    "next": "latest",
    "react": "^17.x.x",
    "react-dom": "^16.12.0",
    "react-icons": "^4.1.0",
    "sweetalert2": "^10.9.0",
    "sweetalert2-react-content": "^3.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-typescript": "^7.12.1",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@testing-library/dom": "^7.26.3",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "jest": "^26.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "typedoc": "^0.19.2",
    "typescript": "4.0"
  },
  "license": "MIT"
}
